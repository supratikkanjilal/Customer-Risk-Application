var queryParams = request.queryParams;
   var tableName = queryParams.tableName;
   var sys_id  = queryParams.sys_id;

   var gr = new GlideRecord('x_cpszo_spoke_customer_profile');
   gr.query();

while(gr.next()){
	var customerData ={};
	if(sys_id == gr.sys_id){
		customerData.number = gr.getValue('number');
		customerData.name = gr.getValue('name');
		customerData.mobile_number = gr.getValue('mobile_number');
		customerData.risk_score = gr.getValue('risk_score');
		customerData.last_payment_date = gr.getValue('last_payment_date');
		customerData.credit_behaviour = gr.getValue('credit_behaviour');

		response.setBody(customerData);
	}
   }

})(request, response);]]></operation_script>
