        <script><![CDATA[(function executeRule(current /*, previous*/) {
  g_scratchpad.days_since_last_payment = '';

  if (!current.last_payment_date.nil()) {
    var last = new GlideDateTime(current.last_payment_date);
    var now  = new GlideDateTime();

    // getNumericValue() returns milliseconds since epoch for each GlideDateTime
    // so you can do accurate math regardless of user display formats
    var diffMs = now.getNumericValue() - last.getNumericValue();
    var days   = Math.floor(diffMs / (1000 * 60 * 60 * 24));
    g_scratchpad.days_since_last_payment = days;
  }
})(current);]]></script>
