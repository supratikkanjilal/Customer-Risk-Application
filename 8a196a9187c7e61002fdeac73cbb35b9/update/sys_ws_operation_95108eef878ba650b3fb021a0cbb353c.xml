        <name>Create Customer</name>
        <operation_script><![CDATA[(function process(/*RESTAPIRequest*/ request, /*RESTAPIResponse*/ response) {
    var body = request.body.data;
    var gr = new GlideRecord('x_cpszo_spoke_customer_profile');
    gr.initialize();
    gr.number = body.number;
    gr.name = body.name;
    gr.email = body.email;
    gr.mobile_number = body.mobile_number;
    gr.risk_score = body.risk_score;
    gr.last_payment_date = body.last_payment_date;
    gr.credit_behaviour = body.credit_behaviour;
    gr.insert();
    response.setStatus(201);
    response.setBody({ message: 'Customer created successfully' });
})(request, response);]]></operation_script>
