        <client_script><![CDATA[function($scope, $location, spModal) {
  $scope.formData = {
    number: $location.search().number || '',
    offer_status: 'Pending'
  };

  $scope.errorMessage = '';
  $scope.successMessage = '';

  $scope.submitOffer = function() {
    var amt = parseFloat($scope.formData.installment_amount);
    if (!amt || amt <= 0) {
      $scope.errorMessage = 'Installment amount must be greater than 0.';
      return;
    }

    var gr = new GlideRecord('x_cpszo_spoke_offer_tracker');
    gr.initialize();
    gr.number = $scope.formData.number;
    gr.installment_amount = amt;
    gr.offer_status = $scope.formData.offer_status;
    if ($scope.formData.offer_status === 'Accepted') {
      gr.acceptance_date = new GlideDateTime();
    }
    gr.insert();

    $scope.successMessage = 'Offer created successfully.';
    $scope.errorMessage = '';
  };
}
]]></client_script>
