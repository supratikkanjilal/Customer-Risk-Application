        <script><![CDATA[(function() {
    //var customerId = options.customerId || ''; // Use options instead of input
		var customerId = data.customerId || '';
    data.offers = [];
    data.reminders = [];
    data.notifications = [];
    data.integrations = [];

    if (!customerId) {
        data.error = "Customer ID not provided.";
        return;
    }

    // Offers
    var offerGR = new GlideRecord('u_offer_tracker');
    offerGR.addQuery('u_customer_id', customerId);
    offerGR.query();
    while (offerGR.next()) {
        data.offers.push({
            name: offerGR.getValue('u_offer_name'),
            status: offerGR.getValue('u_status'),
            sys_id: offerGR.getValue('sys_id')
        });
    }

    // Reminders
    var reminderGR = new GlideRecord('u_reminder_log');
    reminderGR.addQuery('u_customer_id', customerId);
    reminderGR.query();
    while (reminderGR.next()) {
        data.reminders.push({
            text: reminderGR.getValue('u_reminder_text'),
            date: reminderGR.getValue('u_reminder_date'),
            sys_id: reminderGR.getValue('sys_id')
        });
    }

    // Notifications
    var notificationGR = new GlideRecord('u_notification_preview');
    notificationGR.addQuery('u_customer_id', customerId);
    notificationGR.query();
    while (notificationGR.next()) {
        data.notifications.push({
            message: notificationGR.getValue('u_message'),
            type: notificationGR.getValue('u_type'),
            sys_id: notificationGR.getValue('sys_id')
        });
    }

    // Integrations
    var integrationGR = new GlideRecord('u_integration_log');
    integrationGR.addQuery('u_customer_id', customerId);
    integrationGR.query();
    while (integrationGR.next()) {
        data.integrations.push({
            event_type: integrationGR.getValue('u_event_type'),
            timestamp: integrationGR.getValue('u_timestamp'),
            sys_id: integrationGR.getValue('sys_id')
        });
    }
})();]]></script>
